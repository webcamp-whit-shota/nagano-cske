  <div class="container px-5 px-sm-0">
    <div class="row mt-5">
        <div class="col">
          <%= image_tag @item.image, size: "300x200"  %>
        </div>
        <div>
          <h4>  
            <%= @item.name %>
          </h2>
        </div>
        <div>
          <%= @item.introduction %>
        </div>
        <div>
          ￥<%= @item.price.to_s(:delimited) %>
        </div>
        <%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f| %>
        <%= f.submit "カートに入れる" %>
        <% end %>
    </div>
  </div>
    
    
  