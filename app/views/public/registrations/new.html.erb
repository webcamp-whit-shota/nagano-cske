<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <th><%= f.label :first_name, "名" %></th>
      <th><%= f.text_field :first_name, autofocus: true, autocomplete: "email" %></th>
      <th><%= f.label :last_name %></th>
      <th><%= f.text_field :last_name, autofocus: true, autocomplete: "email" %></th></th>
    </tr>
    <tr>
      <th><%= f.label :first_name_kana %></th>
      <th><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %></th>
      <th><%= f.label :last_name_kana %></th>
      <th><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %></th></th>
    </tr>
    <tr>
      <th><%= f.label :email %></th>
      <th><%= f.email_field :email, autocomplete: "email" %> </th>
    </tr>
    <tr>
      <th><%= f.label :postal_code %></th>
      <th><%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %></th>
    </tr>
    <tr>
      <th><%= f.label :address %></th>
      <th><%= f.text_field :address, autofocus: true, autocomplete: "email" %></th>
    </tr>
    <tr>
      <th><%= f.label :telephone_number %></th>
      <th><%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %></th>
    </tr>
    <tr>
      <th><%= f.label :password %></th>
      <% if @minimum_password_length %>
      <th>(<%= @minimum_password_length %> characters minimum)</th>
      <% end %><br />
      <th><%= f.password_field :password, autocomplete: "new-password" %></th>

    <tr>
      <th><%= f.label :password_confirmation %></th>
      <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
    <tr>
      <th></th>
      <th class="actions">
        <%= f.submit "新規会員登録" %>
      </th>
    </tr>
  </table>
  <% end %>
  <h2>既に登録済みの方</h2>
  <%= render "public/shared/links" %>
